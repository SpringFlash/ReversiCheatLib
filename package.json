{
  "name": "@reversi/bot-native",
  "version": "1.0.0",
  "description": "Нативная библиотека для анализа игры в реверси по скриншотам",
  "main": "dist/client/index.js",
  "types": "dist/client/index.d.ts",
  "files": [
    "dist/client",
    "android",
    "ios"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "reversi",
    "othello",
    "game",
    "analysis",
    "bot",
    "react-native",
    "android",
    "ios"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/react-native": "^0.72.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react-native": ">=0.60.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.[jt]sx?$",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,js,jsx}",
      "!src/**/*.d.ts"
    ]
  }
}
